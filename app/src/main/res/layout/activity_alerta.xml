<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/main"
    android:background="@color/white">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Botón para EsSalud Violencia -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/buttonEsSalud"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circulo_azul"

                android:scaleType="centerInside"
                android:contentDescription="EsSalud Violencia" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EsSalud\n014118000"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Botón para Violencia Familiar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/buttonViolenciaFamiliar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circulo_rojo"

                android:scaleType="centerInside"
                android:contentDescription="Denuncia Violencia Familiar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Violencia\n100"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Botón para Central Policial -->
