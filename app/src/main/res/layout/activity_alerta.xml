        </LinearLayout>

        <!-- Botón para Alerta Médica -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/buttonAlertaMedica"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circulo_azul"

                android:scaleType="centerInside"
                android:contentDescription="Alerta Médica" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerta Médica\n014166777"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Botón para Clave Médica -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/buttonClaveMedica"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circulo_amarillo"

                android:scaleType="centerInside"
                android:contentDescription="Clave Médica" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clave Médica\n012658783"
                android:textSize="14sp"
                android:textColor="@android:color/black"
