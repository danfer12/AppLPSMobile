            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Defensa Civil\n115"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Botón para Bomberos -->
